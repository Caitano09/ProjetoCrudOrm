<%- include('../partials/header.ejs') %>

<h1>Editar Pessoa</h1>
<p><a href="/pessoas">Voltar para a lista de pessoas</a></p>
<!--<%= JSON.stringify(pessoa) %> -->
<form action="" method="post">

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" name="nome" id="nome" placeholder="Digite seu nome" value="<%- pessoa.nome %>">
    </div>
    <div class="form-group">
        <label for="nascimento">Nascimento</label>
        <input type="text" class="form-control" name="nascimento" id="nascimento"
            placeholder="Informe a sua data de nascimento" value="<%- pessoa.nascimento %>">
    <div class="form-group">
        <label for="cargo">Cargo</label>
         <input type="text" class="form-control" name="cargo" id="cargo"
            placeholder="Digite o seu cargo" value="<%- pessoa.cargo %>">
    </div>

    <button type="submit" class="btn btn-default">Salvar</button>

</form>

<%- include('../partials/footer.ejs') %>